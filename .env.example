# Dark Forest - Always-On Agentic System Configuration
# Copy this to .env and fill in your actual API keys

# ===============================
# ðŸŒ² ALWAYS-ON AGENT CONFIGURATION
# ===============================
# Enable continuous operation mode
ALWAYS_ON=true

# Trigger mode: periodic | event-driven | continuous
TRIGGER_MODE=periodic

# Interval for periodic triggers (in milliseconds)
# Default: 3600000 (1 hour)
PERIODIC_INTERVAL_MS=3600000

# ===============================
# AI API Keys (REQUIRED for real agents)
# ===============================
# OpenAI GPT-4 (RECOMMENDED - $20/month gives you plenty)
OPENAI_API_KEY="sk-your-openai-key-here"

# Anthropic Claude (ALTERNATIVE - competitive pricing)
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# Google Gemini (BACKUP - has free tier)
GEMINI_API_KEY="your-gemini-key-here"

# ===============================
# Service Ports
# ===============================
PORT=8916                    # Main agents service port
ORCHESTRATOR_PORT=3001       # Legacy orchestrator port
DASHBOARD_PORT=3000          # Dashboard port

# ===============================
# Database Configuration (OPTIONAL - for persistence)
# ===============================
# Option 1: Supabase (FREE - 500MB, 2 projects)
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# Redis (OPTIONAL - for task queue persistence)
# Upstash Redis (FREE - 10k commands/day)
REDIS_URL="rediss://default:your-token@global-touching-firefly-12345.upstash.io:6379"

# ===============================
# Blog Network Configuration
# ===============================
# Google AdSense (for monetization)
GOOGLE_ADSENSE_PUBLISHER_ID="ca-pub-XXXXXXXXXXXXXXXX"

# Amazon Associates (for affiliate links)
AMAZON_ASSOCIATE_ID="your-associate-id-20"

# ===============================
# Content Generation
# ===============================
POSTS_PER_GENERATION=1
GENERATION_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC

# ===============================
# GitHub Pages & Deployment (FREE)
# ===============================
GITHUB_TOKEN="ghp_your-github-personal-access-token"
GITHUB_OWNER="yoans"
GITHUB_REPO_PREFIX="darkforest-"
DEPLOY_BRANCH=gh-pages
CUSTOM_DOMAIN=""

# ===============================
# Analytics (FREE)
# ===============================
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ===============================
# Social Media APIs
# ===============================
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
LINKEDIN_API_KEY="your-linkedin-api-key"

# ===============================
# SEO & Marketing
# ===============================
GOOGLE_SEARCH_CONSOLE_KEY="your-search-console-key"

# ===============================
# Revenue & Monetization
# ===============================
GOOGLE_ADSENSE_CLIENT_ID="ca-pub-xxxxxxxxxx"
AMAZON_ASSOCIATES_TAG="yourtagid-20"
CONVERTKIT_API_KEY="your-convertkit-key"

# ===============================
# Application Settings
# ===============================
NODE_ENV="development"
WEBHOOK_SECRET="your-webhook-secret"

# ===============================
# Email & Notifications
# ===============================
RESEND_API_KEY="your-resend-key"
SLACK_WEBHOOK_URL="your-slack-webhook"
DISCORD_WEBHOOK_URL="your-discord-webhook"