# Dark Forest Blog Network - Optimized Configuration
# Copy this to .env and fill in your actual API keys

# ===============================
# Database Configuration (FREE OPTIONS)
# ===============================
# Option 1: Supabase (FREE - 500MB, 2 projects)
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"
# Option 2: Railway (FREE - $5 credit monthly)  
# DATABASE_URL="postgresql://postgres:password@containers-us-west-1.railway.app:7777/railway"
# Option 3: Local development
# DATABASE_URL="postgresql://darkforest:password@localhost:5432/darkforest"

# Redis (FREE OPTIONS)
# Upstash Redis (FREE - 10k commands/day)
REDIS_URL="rediss://default:your-token@global-touching-firefly-12345.upstash.io:6379"
# Railway Redis (FREE tier available)
# REDIS_URL="redis://default:password@containers-us-west-1.railway.app:6379"

# ===============================
# AI API Keys (REQUIRED)
# ===============================
# OpenAI GPT-4 (RECOMMENDED - $20/month gives you plenty)
OPENAI_API_KEY="sk-your-openai-key-here"
# Anthropic Claude (ALTERNATIVE - competitive pricing)
ANTHROPIC_API_KEY="sk-ant-your-key-here"
# Google Gemini (BACKUP - has free tier)
GEMINI_API_KEY="your-gemini-key-here"

# ===============================
# Blog Network Configuration
# ===============================
# Google AdSense (for monetization)
GOOGLE_ADSENSE_PUBLISHER_ID="ca-pub-XXXXXXXXXXXXXXXX"

# Amazon Associates (for affiliate links)
AMAZON_ASSOCIATE_ID="your-associate-id-20"

# Service Ports
ORCHESTRATOR_PORT=3001
AGENTS_PORT=8916
SHOWCASE_PORT=3100

# Content Generation
POSTS_PER_GENERATION=1
GENERATION_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC

# Deployment
DEPLOY_BRANCH=gh-pages
CUSTOM_DOMAIN=""  # Optional: your custom domain

# ===============================
# GitHub Pages & Deployment (RECOMMENDED - FREE)
# ===============================
GITHUB_TOKEN="ghp_your-github-personal-access-token"  # For automated deployments
GITHUB_OWNER="yoans"                                   # Your GitHub username
GITHUB_REPO_PREFIX="darkforest-"                      # Blog repo naming pattern

# ===============================
# Analytics (FREE OPTIONS)
# ===============================
# Google Analytics 4 (FREE - recommended)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# Plausible Analytics (PAID but privacy-focused alternative)
# PLAUSIBLE_DOMAIN="yourdomain.com"
# PLAUSIBLE_API_KEY="your-plausible-key"

# ===============================
# Content Management (GITHUB-BASED - FREE)
# ===============================
# Using GitHub as CMS - no additional service needed!
# Content stored as markdown files in GitHub repos
CONTENT_BRANCH="main"                                  # Branch for content
CONTENT_PATH="content/posts"                          # Path for blog posts

# ===============================
# Social Media APIs
# ===============================
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
LINKEDIN_API_KEY="your-linkedin-api-key"
FACEBOOK_API_KEY="your-facebook-api-key"

# ===============================
# SEO & Marketing (FREE/AFFORDABLE OPTIONS)
# ===============================
# Google Search Console (FREE - essential for SEO)
GOOGLE_SEARCH_CONSOLE_KEY="your-search-console-key"
# Ubersuggest (AFFORDABLE alternative to SEMrush)
UBERSUGGEST_API_KEY="your-ubersuggest-key"
# SE Ranking (BUDGET SEO tool)
SE_RANKING_API_KEY="your-se-ranking-key"

# ===============================
# Domain & CDN (FREE/CHEAP OPTIONS)
# ===============================
# Cloudflare (FREE CDN + DNS)
CLOUDFLARE_API_TOKEN="your-cloudflare-token"
CLOUDFLARE_ZONE_ID="your-zone-id"
# GitHub Pages (FREE hosting)
CUSTOM_DOMAIN="darkforest.network"                    # Your custom domain

# ===============================
# Revenue & Monetization (BEST ROI OPTIONS)
# ===============================
# Google AdSense (FREE to join, revenue share)
GOOGLE_ADSENSE_CLIENT_ID="ca-pub-xxxxxxxxxx"
# Amazon Associates (FREE affiliate program)  
AMAZON_ASSOCIATES_TAG="yourtagid-20"
# ConvertKit (EMAIL - 1000 subscribers free)
CONVERTKIT_API_KEY="your-convertkit-key"
CONVERTKIT_SECRET="your-convertkit-secret"

# ===============================
# N8N Configuration
# ===============================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER="admin"
N8N_BASIC_AUTH_PASSWORD="your-secure-password"
N8N_ENCRYPTION_KEY="your-encryption-key"

# ===============================
# Application Settings
# ===============================
NODE_ENV="development"
ORCHESTRATOR_PORT=3001
DASHBOARD_PORT=3000
WEBHOOK_SECRET="your-webhook-secret"

# ===============================
# Email & Notifications
# ===============================
RESEND_API_KEY="your-resend-key"            # For email notifications
SLACK_WEBHOOK_URL="your-slack-webhook"      # For alerts
DISCORD_WEBHOOK_URL="your-discord-webhook"  # For alerts

# ===============================
# Backup & Storage
# ===============================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-backup-bucket"
AWS_REGION="us-east-1"